<div class="card featured-card" id="artist">
  <div class="card-body" id="artist">
    <div class="row">
      <div class="col-md-7">
        <h5><a class="card-title" id="artist" href="/artists/<%= artist.id %>"><%= artist.name %></a></h5>
        <p class="card-text" id="artist"><%= artist.description %></p>
      </div>
      <div class="col-md-5">
        <a class="featured-card-image" id="artist" href="/artists/<%= artist.id %>">
          <%= image_tag artist.photo.url(:home), class: "featured-card-image" %>
        </a>
      </div>
    </div>
  </div>
</div>