<div class="card featured-card" id="event">
  <div class="card-body featured-card-body" id="event">
    <div class="row">
      <div class="col-md-7">
        <h5><a class="card-title" id="event" href="/events/<%= event.id %>"><%= event.headliner %></a></h5>
        <h6 class="card-subtitle" id="event"><%= event.supporting %></h6>
        <p class="card-text" id="event"><%= event.date.strftime("%a, %B %d, %Y") %></p>
        <p class="card-text" id="event"><b>Time: </b><%= event.time.strftime("%l:%M %P") %></p>
        <p class="card-text" id="event"><b>Price: </b><%= event.price %></p>
        <div class="row">
          <div class="card-text" id="address_header">
            <b>Location: </b>
          </div>
          <div class="card-text col-xs" id="address_body">
            <%= event.address %><br><%= event.city %>, <%= event.state %><br><%= event.zip %>
          </div>
        </div>
      </div>
      <div class="col-md-5">
        <%= image_tag event.photo.url(:medium), class: "featured-card-image" %>
      </div>
    </div>
  </div>
</div>