<div class="card featured-card" id="release">
  <div class="card-body" id="release">
    <div class="col-md">
      <a class="featured-card-image" id="album_art" href="/releases/<%= release.id %>">
        <%= image_tag release.album_art.url(:home), class: "featured-card-image", id: "album_art" %>
      </a>
    </div>
    <div class="col-md">
      <a class="card-title" id="release" href="/releases/<%= release.id %>">
        <% if release.artist %>
          <h5 class="artist-name" id="release"><%= release.artist.name %></h5>
        <% end %>
        <h6 class="album-name" id="release"><%= release.title %></h6>
      </a>
    </div>
  </div>
</div>