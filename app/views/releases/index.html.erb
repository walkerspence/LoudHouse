<% @title = "Releases | Loud House Publishing" %>
<p id="notice"><%= notice %></p>

<h1>Releases</h1>

<table>
  <thead>
    <tr>
      <th>Artist</th>
      <th>Title</th>
      <th>Release</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @releases.each do |release| %>
      <tr>
        <% if release.artist %>
          <td><%= release.artist.name %></td>
        <% end %>
        <td><%= release.title %></td>
        <td><%= release.release %></td>
        <td><%= release.description %></td>
        <td><%= image_tag release.album_art.url(:thumb) %></td>
        <td><%= link_to 'Show', release %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_release_path(release) %></td>
          <td><%= link_to 'Delete', release, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Release', new_release_path %>
<% end %>